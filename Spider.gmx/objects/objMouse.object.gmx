// fire if the mouse is clicked in range over block
if(left and distance_to_object(objPlayer) &lt; maxWebLength and instance_position(x, y, objFloor)) {    

    // create a web towards x and y from the spider
    with(objPlayer) {
    
        if(web == noone) {
            pivotX = objMouse.x;
            pivotY = objMouse.y;
            
            // Run once right before shooting web
            if (isSwinging == false) {
                var r = sqrt(power(pivotX - x, 2) + power (pivotY - y, 2));
                thetaSpeed = sqrt(power(hsp, 2) + power(vsp, 2)) / r 
            }   
            isSwinging = true;
            firingWeb = true;
            onVine = false;

            web = instance_create(x + sprite_width / 2, y - sprite_height / 2, objWeb);
            web.image_angle = (point_direction(x, y, pivotX, pivotY) + 90)% 360;
            web.pivotX = pivotX;
            web.pivotY = pivotY;
        }
    }
}

// Is not firing web
else {
    with(objPlayer){
    
        // Do only once on release
        if(isSwinging){
            var t = arctan2(web.pivotY - y, web.pivotX - x);
            var r = sqrt(power(web.pivotY - y, 2) + power(web.pivotX - x, 2));

            // Converting angular momentum to linear velocity on release
            releaseVelocity = thetaSpeed * r;
            hsp = - thetaSpeed * sin(t) * r;
            vsp = thetaSpeed * cos(t) * r;
        }
        isSwinging = false;
        firingWeb = false;
    }
}










